{
  "testEnvironment": "node",
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js",
    "!src/app.js",
    "!src/config/**",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "moduleFileExtensions": ["js", "json"],
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/logs/"
  ]
}