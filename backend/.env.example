# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/skillnavigator

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# LLM Integration (Groq) - Fast inference for real-time responses
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=deepseek-r1-distill-llama-70b
GROQ_MAX_TOKENS=8000
GROQ_TEMPERATURE=0.7

# Assessment Question Generation Configuration
DEFAULT_QUESTION_COUNT=15
MIN_QUESTION_COUNT=10
MAX_QUESTION_COUNT=30

# Ollama Configuration (for recommendation refinement)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
ENABLE_LLM_REFINEMENT=true
LLM_TIMEOUT=30000

# Enhanced AI Planning & Web Search APIs (Optional)
# OpenAI API for advanced LLM planning
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API (alternative to OpenAI)
ANTHROPIC_API_KEY=claude-your-anthropic-key

# Web Search APIs for real-time resource discovery
BING_SEARCH_API_KEY=your-bing-search-api-key
SERPAPI_KEY=your-serpapi-key
TAVILY_API_KEY=your-tavily-api-key

# LLM Model Selection
LLM_MODEL=gpt-3.5-turbo

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
FRONTEND_URL=http://localhost:3000